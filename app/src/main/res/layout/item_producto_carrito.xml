<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:marginBottom="6dp"
    android:background="#111111"
    android:layout_marginVertical="6dp"
    android:elevation="2dp"
    android:gravity="center_vertical">

    <!-- Imagen del producto -->
    <ImageView
        android:id="@+id/imgProductoCarrito"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="Imagen del producto"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"
        android:background="#0A0A0A"
        android:padding="4dp" />

    <!-- Información del producto -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNombreCarrito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del producto"
            android:textColor="#39FF14"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPrecioCarrito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$00.000"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/txtCantidadCarrito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad: 1"
            android:textColor="#BBBBBB"
            android:textSize="13sp"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <!-- Botón eliminar -->
    <Button
        android:id="@+id/btnEliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="✖"
        android:textColor="#000000"
        android:backgroundTint="#39FF14"
        android:paddingHorizontal="10dp"
        android:layout_marginStart="8dp"
        android:layout_gravity="center_vertical" />

</LinearLayout>
